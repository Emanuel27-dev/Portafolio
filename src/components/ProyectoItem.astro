---
interface Props {
	src: string;
    title: String;
    linkPreview: String;
    linkGithub: String;
}

const { src, title, linkGithub, linkPreview } = Astro.props;
---

<article>
    <figure class="profundidad">
        <img src={src}>
    </figure>

    <div class="texts">
        <h3>{title}</h3>
        <p>
            <slot />
        </p>
        <div>
            <a href={linkGithub.toString()} class="boton" target="_blank">
                <slot name="github-icon"/>
                <span>Code</span>
            </a>
            <a href={linkPreview.toString()} class="boton" target="_blank">
                <slot name="preview-icon"/>
                <span>Preview</span>
            </a>
        </div>
    </div>
</article>

<style>
    .profundidad {
        box-shadow: rgba(0, 0, 0, 0.09) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;
        
    }
    article {
        display: flex;
        /* flex-direction: column; */
        align-items: start;
        gap: 25px;
    }

    figure {
        border-radius: .6em;
        flex-grow: 1;
        flex-basis: 45%;
        height: 230px;
    }

    img {
        display: block;
        border-radius: inherit;
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* height: 100%; */
    }

    article > div {
        flex-basis: 40%;
        flex-grow: 1;
    }

    .texts {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 10px;
    }

    h3 {
        font-size: 24px;
    }

    p {
        font-size: initial;
        font-weight: initial;
        color: var(--color-secondary);
    }

    .boton {
        font-size: initial;
        font-weight: 400;
        text-decoration: none;
        color: white;
        background-color: var(--color-boton);
        padding: .5em 1em;
        border-radius: .5em;
        cursor: pointer;
        
        display: inline-flex;
        justify-content: center;
        align-items: center;
        gap: 8px;

        transition: box-shadow .4s;
    }

    .boton:hover {
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 80px -5px;
    }

    @media (width < 585px) {
        article {
            flex-direction: column;
            gap: 15px;
        }


    }

</style>