        display: none;
    }

</style>

<script>
    // Cambiando el tema, en cada recarga de la pagina ..
    window.addEventListener('load',() => {
        if(localStorage.getItem('tema').length !== 0){
            document.querySelector("html").classList.toggle(localStorage.getItem('tema'));

            linksText.forEach((link) => (link.style.color = "white"));

            fullIcon.classList.toggle('not-show');
            emptyIcon.classList.toggle('not-show');
        }
    });



    const moonIcon = document.querySelector(".cta-svg") as HTMLElement;
    const linksText = document.querySelectorAll(
        "nav a",
    ) as NodeListOf<HTMLAnchorElement>;
    const boton = document.querySelector(".boton") as HTMLElement;
    const fullIcon = document.querySelector('.full-icon') as HTMLElement;
    const emptyIcon = document.querySelector('.empty-icon') as HTMLElement;

    moonIcon.addEventListener("click", (e) => {
        e.preventDefault();
        document.querySelector("html").classList.toggle("light-theme");
        linksText.forEach((link) => (link.style.color = "white"));

        /**
         * cambio de tema
         */
        fullIcon.classList.toggle('not-show');
        emptyIcon.classList.toggle('not-show');

        // Guardando el tema
        localStorage.setItem('tema',document.querySelector("html").getAttribute('class'));
    });
</script>
